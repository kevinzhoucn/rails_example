= simple_form_for(@province, html: {class: "form-horizontal"}) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, label: "城市名:"
    = f.input :abbr, label: "缩写:"

  .controls
    = f.button :submit, "创建城市", class: 'btn btn-primary'
    = link_to "取消", root_url, class: 'btn btn-info'
