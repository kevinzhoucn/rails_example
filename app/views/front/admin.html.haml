.media.panel.panel-info
  .panel-heading 新建分类
  .media-body.panel-body
    .span3
      = link_to '新建分类', new_category_path, class: 'btn btn-primary'
    .span3
      = link_to '新建子分类', new_sub_category_path, class: 'btn btn-info'

.media.panel.panel-success
  .panel-heading 编辑分类
  .media-body.panel-body
    - @categories.each do |category|
      .span3
        %h4
          %span= category.name
          = link_to '修改', edit_category_path(category), { style: "font-size:80%;margin-left:20px" }
        %table.table.table-striped          
          %thead
            %tr
              %th 序号
              %th 类别名称
              %th 操作
          %tbody
            - category.sub_categories.each_with_index do |sub_category, index|
              %tr
                %td= index
                %td
                  = link_to sub_category.name, sub_category
                %td
                  = link_to '编辑', edit_sub_category_path(sub_category)
                  = link_to '删除', sub_category_path(sub_category), method: :delete, data: { confirm: '确认删除?'}

