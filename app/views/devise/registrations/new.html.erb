<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <div class="controls">
    <h2>用户注册</h2>
  </div>
  <div class="form-inputs">
    <%= f.input :email, label: "用户名", :required => true, :autofocus => true %>
    <%= f.input :password, label: "密码", :required => true %>
    <%= f.input :password_confirmation, label: "再次确认", :required => true %>
  </div>

  <div class="controls">
    <%= f.button :submit, "注册", class: "btn btn-primary" %>
  </div>
<% end %>

