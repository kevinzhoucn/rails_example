= simple_form_for(@article, html: {class: "form-horizontal"} ) do |f|
  = f.error_notification

  .form-inputs
    = f.association :segment, label: "发布模块", label_method: :name, value_method: :id, include_blank: false
    = f.association :province, label: "发布省份", label_method: :name, value_method: :id, include_blank: false
    = f.input :title
    = f.input :content   

  .form-actions
    = f.button :submit
