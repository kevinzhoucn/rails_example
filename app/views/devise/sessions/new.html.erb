<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="controls">
    <h2>登录</h2>
  </div>
  <div class="form-inputs">
    <%= f.input :email, label: "用户名", :required => false, :autofocus => true %>
    <%= f.input :password, label: "密码", :required => false %>
    <%#= f.input :remember_me, label: "记住我", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="controls">
    <%= f.button :submit, "登录", class: "btn btn-primary" %>
  </div>
<% end %>

<% if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name) %><br />
<% end -%>

<%#= render "devise/shared/links" %>
